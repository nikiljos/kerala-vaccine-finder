<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">

    <title>Document</title>
</head>

<body>

    <div class="album py-5 bg-light">
        <div class="container">
            <div clas="main">





                <form action="/" method="POST" name="form" class="form-inline">
                    <div class="form-group mb-2">
                        <div class="text-center mb-4">
                            <select name="district" id="district" class="form-control mb-2">
                <% for (var i = 0; i < districtList.length ; i++) { %>
                    <option value="none" selected disabled hidden>Select Your District</option>
                   <option value="<%= districtList[i].district_id %>"><%= districtList[i].district_name %></option>         
                        
                    <% } %>
                
                
              </select>

                            <button type="submit" class="btn btn-primary mb-2">Go</button></div>
                    </div>
                </form>

                <% x %>

                    <% var availableCap=0 %>

                        <div class="row">

                            <% if(cowinData!=""){ %>



                                <% for (m = 0; m < x; m++) { %>


                                    <% y = cowinData.centers[m].sessions.length %>

                                        <% for (n = 0; n < y; n++) { %>

                                            <% var cap = cowinData.centers[m].sessions[n].available_capacity; %>
                                                <% availableCap = availableCap + cap %>

                                                    <%  if (cap > 0) { %>
                                                        <div class="col-md-4">
                                                            <div class="card mb-4 box-shadow">

                                                                <div class="card-body">
                                                                    <p class="card-text">
                                                                        <b>Center:</b>
                                                                        <%= cowinData.centers[m].name %> <br> <b>Vaccine Name:</b>
                                                                            <%= cowinData.centers[m].sessions[n].vaccine %> <br> <b>Date:</b>
                                                                                <%= cowinData.centers[m].sessions[n].date %> <br> <b>Slots Available:</b>
                                                                                    <%= cowinData.centers[m].sessions[n].available_capacity %><br> <b>Mininum Age:</b>
                                                                                        <%= cowinData.centers[m].sessions[n].min_age_limit %><br>


                                                                    </p>

                                                                    <small class="text-muted"><a href="https://selfregistration.cowin.gov.in/">Book your slot</a></small></div>
                                                            </div>
                                                        </div>
                                                        <% } %>







                                                            <% } %>
                                                                <% } %>
                        </div>
                        <br><br>
                        <div>Available Slots:
                            <%= availableCap %><br> Total Centres Listed:
                                <%= x %>
                        </div>
                        <% } %>










            </div>



        </div>
    </div>

</body>

</html>